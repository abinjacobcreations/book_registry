<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :book_name %>
    <%= form.text_field :book_name, id: :book_book_name %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id, Category.all.collect {|c| [ c.category_name, c.id ] }, id: :book_category_id 
    %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :book_price, step: :any %>
  </div>

  <div class="field">
    <%= form.label :isbn %>
    <%= form.text_field :isbn, id: :book_isbn %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="field">
    <%= form.label :publish_status %>
    <%= form.select :publish_status, Book.publish_statuses.keys.map {|ps| [ ps.titleize, ps ] }, id: :book_publish_status %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
